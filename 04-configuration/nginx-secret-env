apiVersion: v1
kind: Pod
metadata:
  creationTimestamp: null
  labels:
    run: nginx-secret-env
  name: nginx-secret-env
spec:
  containers:
  - image: nginx:latest
    name: nginx-secret-env
    resources: {}
    env:
    - name: USERNAME
      valueFrom:
        secretKeyRef:
          name: mysecret2
          key: username 
  dnsPolicy: ClusterFirst 
  restartPolicy: Never
status: {}
