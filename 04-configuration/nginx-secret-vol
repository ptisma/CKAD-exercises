apiVersion: v1
kind: Pod
metadata:
  creationTimestamp: null
  labels:
    run: nginx-secret-vol
  name: nginx-secret-vol
spec:
  containers:
  - image: nginx:latest
    name: nginx-secret-vol
    resources: {}
    volumeMounts:
        # name must match the volume name below
        - name: secret-volume
          mountPath: /etc/foo
          readOnly: true
  dnsPolicy: ClusterFirst
  volumes:
    - name: secret-volume
      secret:
        secretName: mysecret2 
  restartPolicy: Never
status: {}
